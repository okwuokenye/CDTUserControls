<UserControl x:Class="CDTUserControl.Usercontrols.VisualViewerUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CDTUserControl.Usercontrols"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="35" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="35" />
        </Grid.ColumnDefinitions>

        <Image Grid.Row="0" Grid.RowSpan="2" Grid.Column="0" Grid.ColumnSpan="2" Stretch="Fill">
            <Image.Source>
                <BitmapImage UriSource="{Binding ImageSource}"/>
            </Image.Source>
        </Image>
        
        <ToggleButton Grid.Row="1" Grid.Column="1" Margin="4,4,4,4" ToolTip="Lock current image">
        <Image x:Name="lockimage" Source="../Resources/padlock.png" />
        </ToggleButton>
        
    </Grid>
</UserControl>
