<Window x:Class="CDTUserControl.Usercontrols.ColorPickerWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
    Title="Choose color" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <xctk:ColorPicker SelectedColor="{Binding Color}"></xctk:ColorPicker>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
            <Button Content="OK" Width="75" IsDefault="True" Command="{Binding Ok}"/>
            <Button Content="Cancel" Width="75" IsCancel="True" Command="{Binding Cancel}"/>
        </StackPanel>
    </Grid>
</Window>
