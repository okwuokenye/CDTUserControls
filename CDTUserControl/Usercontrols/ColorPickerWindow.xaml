<Window x:Class="CDTUserControl.Usercontrols.ColorPickerWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
    Title="Choose color" Height="100" Width="200" WindowStartupLocation="Manual" ResizeMode="NoResize"  Icon="/CDTUserControl;component/Resources/CDTcontroller.ico" Topmost="True">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <xctk:ColorPicker Name="ClrPcker_Background" SelectedColor="{Binding ColorSelected}"></xctk:ColorPicker>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
            <Button Content="OK" Width="75" IsDefault="True" Click="OK_Click"/>
            <Button Content="Cancel" Width="75" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
